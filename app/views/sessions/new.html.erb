<% provide(:title, "Sign in") %>
<body id="signin">

  <div class="bg clear">
    <a href="<%= root_url %>" class="logo">
      <%= image_tag "logo.png" %>
    </a>

    <h3>Insurance Pricing Room</h3>

    <div class="content" style="min-height:400px">
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="fields">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, class: 'form-control', placeholder: "Type your email address here" %>
        </div>
        <div class="fields">
          <%= f.label :password %>
          <%= link_to "(forgot password)", new_password_reset_path %>
          <%= f.password_field :password, class: 'form-control', placeholder: "Type your password here" %>
        </div>
        <div class="info">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>
        </div>
        <div class="actions">
          <%= f.submit "Sign in to your account", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>

    <div class="bottom-wrapper" style="padding-bottom: 40px">
      <!-- Leave blank -->
    </div>
  </div>

</body>
