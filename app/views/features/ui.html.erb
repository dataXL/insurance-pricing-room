<%= content_for :body_id, "ui" %>

<div class="menubar">
	<div class="sidebar-toggler visible-xs">
		<i class="ion-navicon"></i>
	</div>
	
	<div class="page-title">
		User Interface Showcase
	</div>
</div>

<div class="content-wrapper">
	<section class="intro">
		<h3>
			UI Examples
		</h3>
		<p>
			This page demos some ready-to-use UI samples that you can use to increment the funcionality of your own Admin.
		</p>
	</section>

	<section class="modals">
		<h4>Modals</h4>

		<a href="#" class="tour-first-step" data-toggle="modal" data-target="#welcome-modal">First time welcome Modal</a>
		<a href="#" data-toggle="modal" data-target="#prompt-modal">Prompt Modal</a>
		<a href="#" data-toggle="modal" data-target="#confirm-modal">Confirm Modal</a>
		<a href="#" data-toggle="modal" data-target="#form-modal">Form Modal</a>
		<a href="#" data-toggle="modal" data-target="#form-validation-modal">Form with Validation Modal</a>
	</section>

	<section class="notifications">
		<h4>Notifications</h4>

		<a href="#" class="normal-notification">New Notification</a>
		<a href="#" class="error-notification">Error Message</a>
		<a href="#" class="button-notification tour-second-step">Message with button</a>
		<a href="#" class="run-notification">Error with try again option</a>
	</section>

	<section class="offline">
		<h4>
			Offline Notification
			<small>
				Include <code>offline.chrome.css</code> and <code>offline.min.js</code> and automatically detects when your users lose connection and a message is shown.
			</small>
		</h4>

		<div class="checkbox tour-third-step">
			<label>
					<input type="checkbox" id="offline-simulate-check" /> 
					Click on the checkbox to start a simulation of a connectivity problem and un-check to connect again.
			</label>
			</div>
	</section>

	<section class="tour">
		<h4>
			Guided Tour
			<small>
				Useful to highlight some important features to your users by focusing on a section of the page.
			</small>
		</h4>

		<a href="#" class="start-tour">Start the tour</a>
	</section>
</div>

<%= content_for :bottom_content do %>
	<!-- First time welcome Modal -->
	<div class="modal fade" id="welcome-modal" tabindex="-1" role="dialog">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		    	<div class="modal-header">
		        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		      	</div>
		      	<div class="modal-body">
		      		<header>
		      			Welcome to Wolf Admin!
		      		</header>
					
					<p>
						This is a welcome message to some one that just signed up to your
						service, you can show some features of your dashboard or links to configuration.
					</p>

					<div class="get-started">
						<div class="row">
							<div class="col-md-4 animated fadeInDown">
								<i class="ion-wrench"></i>
								<a href="#">Configure your account</a>
							</div>
							<div class="col-md-4 animated fadeInDown two">
								<i class="ion-person-stalker"></i>
								<a href="#">Invite your teammates</a>
							</div>
							<div class="col-md-4 animated fadeInDown three">
								<i class="ion-email"></i>
								<a href="#">Setup your notifications</a>
							</div>
						</div>
						<div class="row">
							<div class="col-md-4 animated fadeInDown four">
								<i class="ion-help-circled"></i>
								<a href="#">Watch our tutorials</a>
							</div>
							<div class="col-md-4 animated fadeInDown five">
								<i class="ion-upload"></i>
								<a href="#">Import your contacts</a>
							</div>
							<div class="col-md-4 animated fadeInDown six">
								<i class="ion-code-working"></i>
								<a href="#">Get your API Keys</a>
							</div>
						</div>
					</div>

					<a href="#" data-dismiss="modal" class="go-dashboard">
						Just go straight to my dashboard
						<i class="fa fa-angle-double-right"></i>
					</a>
		      	</div>
		    </div>
	  	</div>
	</div>

	<!-- Prompt Modal -->
	<div class="modal fade" id="prompt-modal" tabindex="-1" role="dialog">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		        <form role="form">
			      	<div class="modal-header">
			        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        	<h4 class="modal-title" id="myModalLabel">Modal title</h4>
			      	</div>
			      	<div class="modal-body">
					  	<div class="form-group">
					    	<label>Enter a value:</label>
					    	<input type="text" class="form-control" />
					  	</div>
			      	</div>
			      	<div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				        <button type="submit" class="btn btn-primary">Save changes</button>
			      	</div>
				</form>
		    </div>
	  	</div>
	</div>

	<!-- Confirm Modal -->
	<div class="modal fade" id="confirm-modal" tabindex="-1" role="dialog">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		    	<form method="post" action="#" role="form">
			      	<div class="modal-header">
			        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        	<h4 class="modal-title" id="myModalLabel">
			        		Are you sure you want to delete this?
			        	</h4>
			      	</div>
			      	<div class="modal-body">
						Do you want to delete your account? All your info will be erased.
			      	</div>
			      	<div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				        <button type="submit" class="btn btn-danger">Yes, delete it</button>
			      	</div>
			    </form>
		    </div>
	  	</div>
	</div>

	<!-- Form Modal -->
	<div class="modal fade" id="form-modal" tabindex="-1" role="dialog">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		    	<form method="post" action="#" role="form">
			      	<div class="modal-header">
			        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        	<h4 class="modal-title" id="myModalLabel">
			        		Create a new task
			        	</h4>
			      	</div>
			      	<div class="modal-body">
						<div class="form-group">
					    	<label>Enter the task:</label>
					    	<input type="text" class="form-control" />
					  	</div>
					  	<div class="form-group">
					    	<label>Who's responsible?:</label>
					    	<select class="form-control" data-smart-select>
					    		<option>Me</option>
					    		<option>John Smith</option>
					    		<option>Karen Lawrence</option>
					    	</select>
					  	</div>
					  	<div class="form-group">
					    	<label>Date when it's due:</label>
					    	<div class="input-group">
							  	<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
							  	<input type="text" class="form-control datepicker" placeholder="03/05/2014" />
							</div>
					  	</div>
			      	</div>
			      	<div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				        <button type="submit" class="btn btn-success">Save task</button>
			      	</div>
				</form>
		    </div>
	  	</div>
	</div>

	<!-- Form with Validation Modal -->
	<div class="modal fade" id="form-validation-modal" tabindex="-1" role="dialog">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		    	<form id="new-user-form" method="post" action="#" role="form">
			      	<div class="modal-header">
			        	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			        	<h4 class="modal-title" id="myModalLabel">
			        		Create a new user
			        	</h4>
			      	</div>
			      	<div class="modal-body">
						<div class="form-group">
					    	<label>Full name:</label>
					    	<input type="text" name="user[name]" class="form-control" />
					  	</div>
					  	<div class="form-group">
					    	<label>Email:</label>
					    	<input type="email" name="user[email]" class="form-control" />
					  	</div>
					  	<div class="form-group">
					  		<label>Notes:</label>
					  		<textarea class="form-control" name="user[notes]" rows="3"></textarea>
					  	</div>
			      	</div>
			      	<div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				        <button type="submit" class="btn btn-success">Save user</button>
			      	</div>
				</form>
		    </div>
	  	</div>
	</div>
<% end %>