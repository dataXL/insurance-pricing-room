<%= content_for :body_id, "account" %>

<div id="sidebar">
  <div class="sidebar-toggler visible-xs">
    <i class="ion-navicon"></i>
  </div>

  <h3>My company</h3>
  <ul class="menu">
    <li>
      <a href="<%= insurer_path(1) %>" class="active">
        <i class="ion-ios-briefcase-outline"></i>
        Profile
      </a>
    </li>
    <li>
      <a href="<%= billing_insurers_path(1) %>" class="active">
        <i class="ion-card"></i>
        Billing
      </a>
    </li>
  </ul>
</div>

<div id="panel" class="profile">
  <h3>
    Profile settings
  </h3>

  <p class="intro">
    Change your company's profile, logo, billing information, etc.
  </p>

  <%= form_for(@insurer, multipart: true) do |i| %>
    <div class="form-group avatar-field clearfix">
        <div class="col-sm-3">
          <%= image_tag "avatars/company.png", class: "img-responsive img-circle" %>
        </div>
        <div class="col-sm-9">
          <label>Set up your company's logo</label>
            <%# f.file_field :avatar %>
        </div>
      </div>
      <div class="form-group">
      <%= i.label :name %>
      <%= i.text_field :name, :class => "form-control", :placeholder => "My company's name" %>
    </div>
    <div class="form-group">
      <%= i.label :address %>
      <%= i.text_field :address, class: "form-control", :placeholder => "My company's address" %>
    </div>
    <div class="form-group">
      <%= i.label :city %>
      <%= i.text_field :city, class: "form-control", :placeholder => "My company's HQ location" %>
    </div>
    <div class="form-group">
      <%= i.label :zip %>
      <%= i.text_field :zip, class: "form-control", :placeholder => "My company's zip code" %>
    </div>
    <div class="form-group action">
      <input type="submit" class="btn btn-success" value="Save changes" />
    </div>
  <% end %>
</div>
