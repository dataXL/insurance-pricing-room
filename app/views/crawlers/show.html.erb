Clicks: <%= @crawler.clicks_performed_by_user %> <br>
Purchases: <%= @crawler.purchases_performed_by_user %>

<p><p>

<%= form_for @crawler do |f| %>
  <%= f.hidden_field :clicks_performed_by_user, :value => @crawler.clicks_performed_by_user.to_i + 1 %>
  <%= f.submit "Click" %>
<% end %>

<p>

<%= link_to( "Click", crawler_path(@crawler, :crawler => { :clicks_performed_by_user => @crawler.clicks_performed_by_user.to_i + 1}), :remote => :true, :method => :put ) %>

<p>

<%= form_for @crawler do |f| %>
  <%= f.hidden_field :purchases_performed_by_user, :value => @crawler.purchases_performed_by_user.to_i + 1 %>
  <%= f.submit "Purchase" %>
<% end %>

