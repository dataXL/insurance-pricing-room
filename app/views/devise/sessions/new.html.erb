<% provide(:title, "Sign in") %>

<style>
input.form-control:focus {
  border-color: rgb(96,96,96);
}
</style>

<body id="signin">

  <div class="bg clear">


    <h3><b>Insurance Pricing Room</b></h3>
    <h4 style="text-align:center">Sign in</h4>

    <div class="content" style="min-height:300px">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="fields">
          <%= f.label :email, "Email Address" %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="fields">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="info">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            <%= f.submit "Log in", class: "btn btn-default" %>
          </div>
        <% end %>

      <% end %>
      <%= render "devise/shared/links" %>

    </div>

    <div class="bottom-wrapper" style="margin-top:50px; padding-bottom: 40px; height:180px">
      <a href="<%= root_url %>" class="logo" style=" margin-top:50px">
        <%= image_tag "logo.png" %>
      </a>
    </div>
  </div>
</body>
