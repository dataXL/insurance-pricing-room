<% provide(:title, "Insurance Pricing Room") %>
<%= content_for :body_id, "dashboard" %>
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<%= javascript_include_tag "//www.google.com/jsapi" %>


<div class="menubar">
    <div class="sidebar-toggler visible-xs">
    <i class="ion-navicon"></i>
    </div>

  <div class="page-title">
        Dashboard 2
  </div>
</div>


<div class="content-wrapper">

  <%= pie_chart @dictionary %>


  <%= column_chart @barchart %>


  <%= line_chart @data %>


  <div id='chart'></div>
  <%= render_chart(@barchart, 'chart') %>

  <div id='chart2'></div>
  <%= render_chart(@areachart, 'chart2') %>

  <div id='chart3'></div>
  <%= render_chart(@gaugechart, 'chart3') %>


  <div id='chart4'></div>
  <%= render_chart(@linechart, 'chart4') %>




</div>


<div class="content-wrapper">
  <div class="metrics clearfix">
    <div class="metric">
      <span class="field">Total Tariff Cells</span>
      <span class="data"><%= Tariff.all.count - 1 %></span>
    </div>
    <div class="metric">
      <span class="field">Total Risks</span>
      <span class="data"><%= Risk.all.count - 1 %></span>
    </div>
    <div class="metric">
      <span class="field">Number of Competitors</span>
      <span class="data"><%= Product.uniq.pluck(:insurer).count %></span>
    </div>
    <div class="metric">
      <span class="field">Number of Segments</span>
      <span class="data">0</span>
    </div>
  </div>

  <div class="chart">
    <h3>
      <i>f</i> <small>(Preference Share)</small> = Price
    </h3>
    <div id="visitors-chart"></div>
  </div>

  <div class="charts-half clearfix">
    <div class="chart pull-left">
      <h3>
        Market Overview
      </h3>

      <div>
        <table id="orders-datatable">
          <thead>
              <tr>
                  <th tabindex="0" rowspan="1" colspan="1">Products</th>
                  <th tabindex="0" rowspan="1" colspan="1">Max. Utility</th>
                  <th tabindex="0" rowspan="1" colspan="1">Logit</th>
              </tr>
          </thead>

          <tbody>
              <tr>
                  <td><a href="#">Product A</a></td>
                  <td>8,2 %</td>
                  <td>7,4 %</td>
              </tr>
              <tr>
                  <td><a href="#">Product B</a></td>
                  <td>25,2 %</td>
                  <td>23,5 %</td>
              </tr>
              <tr>
                  <td><a href="#">Product C</a></td>
                  <td>8,7 %</td>
                  <td>22,3 %</td>
              </tr>
              <tr>
                  <td><a href="#">Product D</a></td>
                  <td>2,7 %</td>
                  <td>10,6 %</td>
              </tr>
              <tr>
                  <td><a href="#">Product E</a></td>
                  <td>55,1 %</td>
                  <td>36,2 %</td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="chart pull-right">
      <h3>
        Price Scenarios
      </h3>
      <div>
        <table id="orders-datatable">
          <thead>
              <tr>
                  <th tabindex="0" rowspan="1" colspan="1">Price Scenarios</th>
                  <th tabindex="0" rowspan="1" colspan="1">Price</th>
                  <th tabindex="0" rowspan="1" colspan="1">Logit</th>
              </tr>
          </thead>

          <tbody>
              <tr>
                  <td><a href="#">High Price</a></td>
                  <td>2160 €</td>
                  <td>6,6 %</td>
              </tr>
              <tr>
                  <td><a href="#">Average-High Price</a></td>
                  <td>1980 €</td>
                  <td>6,9 %</td>
              </tr>
              <tr>
                  <td><a href="#">Average Price</a></td>
                  <td>1800 €</td>
                  <td>7,4 %</td>
              </tr>
              <tr>
                  <td><a href="#">Average-Low Price</a></td>
                  <td>1620 €</td>
                  <td>10,6 %</td>
              </tr>
              <tr>
                  <td><a href="#">Low Price</a></td>
                  <td>1440 €</td>
                  <td>8,0 %</td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
